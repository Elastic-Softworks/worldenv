{
  "name": "@worldenv/worldsrc",
  "version": "0.1.0",
  "description": "WORLDSRC - High-level hybrid programming language for WORLDENV game development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "worldsrc": "dist/cli/worldsrc.js"
  },
  "author": "Elastic Softworks",
  "license": "SEE LICENSE IN LICENSE.txt",
  "private": false,
  "keywords": [
    "worldsrc",
    "worldenv",
    "game-development",
    "programming-language",
    "compiler",
    "typescript",
    "assemblyscript",
    "webassembly",
    "language-server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elastic-softworks/worldenv.git",
    "directory": "worldsrc"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:production": "tsc --project tsconfig.production.json",
    "dev": "npm run build:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build:production && npm test",
    "start": "node dist/cli/worldsrc.js",
    "dev:server": "node dist/tooling/language-server/server.js",
    "compile": "node dist/cli/worldsrc.js compile",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE.txt",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8",
    "chokidar": "^3.5.3",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/minimist": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "env": {
      "node": true,
      "es2022": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
